<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ml.idream.manage.sys.permission.SysPermissionDao">

    <resultMap id="SysPermission" type="ml.idream.manage.sys.permission.SysPermission">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <result property="description" column="description"></result>
        <result property="urlPattern" column="url_pattern"></result>
        <result property="pid" column="pid"></result>
        <result property="delFlag" column="del_flag"></result>
    </resultMap>
    <select id="findPermissionById" parameterType="Long" resultMap="SysPermission">
      Select `id`,`name`,`description`,`url_pattern`,`pid`,`del_flag`
      from sys_permission
      where id = #{id}
      and del_flag = 1
    </select>
    <select id="findPermissionByRoleId" parameterType="Long" resultMap="SysPermission">
      Select p.`id`,p.`name`,p.`description`,p.`url_pattern`,p.`pid`,p.`del_flag`
      from sys_permission p
      join sys_role_permission m on m.permission_id = p.id
      where m.role_id = #{roleId}
      and p.`del_flag` = 1
    </select>
    <insert id="save" parameterType="ml.idream.manage.sys.permission.SysPermission" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO SYS_PERMISSION (`name`,`url_pattern`,`description`,`del_flag)`
      values
      (#{name},#{url},#{description},#{delFlag})
    </insert>
    <delete id="deletAll">
      DELETE FROM sys_permission
    </delete>
</mapper>