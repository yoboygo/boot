<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ml.idream.manage.sys.permission.SysPermissionDao">

    <select id="findPermissionById" parameterType="Long" resultType="ml.idream.manage.sys.permission.SysPermission">
      Select * from sys_permission where id = #{id}
    </select>
    <select id="findPermissionByRoleId" parameterType="Long" resultType="ml.idream.manage.sys.permission.SysPermission">
      Select p.* from sys_permission p join sys_role_permission m on m.permission_id = p.id where m.role_id = #{roleId}
    </select>
    <insert id="save" parameterType="ml.idream.manage.sys.permission.SysPermission" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO SYS_PERMISSION (name,url,description)
      values
      (#{name},#{url},#{description})
    </insert>
    <delete id="deletAll">
      DELETE FROM sys_permission
    </delete>
</mapper>