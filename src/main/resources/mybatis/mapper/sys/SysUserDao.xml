<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ml.idream.manage.sys.user.SysUserDao">

    <resultMap id="SysUser" type="ml.idream.manage.sys.user.SysUser">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <result property="password" column="password"></result>
        <result property="email" column="email"></result>
        <result property="createdate" column="createdate"></result>
        <association property="sysDepartment" column="id" select="ml.idream.manage.sys.department.SysDepartmentDao.findDepartmentByUserId" />
        <association property="roles" column="id" select="ml.idream.manage.sys.role.SysRoleDao.findRoleByUserId" />
    </resultMap>

    <select id="findByNameEquals" parameterType="String" resultMap="SysUser">
        select * from sys_user where name = #{name}
    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into sys_user (name,password,email) values (#{name},#{password},#{email})
    </insert>
    <insert id="saveUserRole" parameterType="List">
        insert into sys_user_role (user_id,role_id)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.userId},#{item.roleId})
        </foreach>
    </insert>
    <delete id="deleteAll">
        delete from sys_user
    </delete>
    <delete id="deleteAllUserRole">
        delete from sys_user_role
    </delete>
    <delete id="deleteAllUserDepartment">
        delete from sys_user_department
    </delete>
    <insert id="saveUserDepartment" parameterType="HashMap">
      INSERT INTO SYS_USER_DEPARTMENT (USER_ID,DEPARTMENT_ID)
      VALUES
      (#{userId},#{departmentId})
    </insert>
</mapper>