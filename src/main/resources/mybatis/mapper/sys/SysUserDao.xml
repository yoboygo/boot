<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ml.idream.sys.user.SysUserDao">
    <select id="findByNameEquals" parameterType="String" resultType="ml.idream.sys.user.SysUser">
        select * from sys_user where name = #{name}
    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into sys_user (name,password,email) values (#{name},#{password},#{email})
    </insert>
    <insert id="saveUserRole" parameterType="List">
        insert into sys_user_role (user_id,role_id)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.userId},#{item.roleId})
        </foreach>
    </insert>
    <delete id="deleteAll">
        delete from sys_user
    </delete>
</mapper>