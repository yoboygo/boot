<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ml.idream.manage.sys.department.SysDepartmentDao">
    <delete id="deleteAll">
        delete from sys_department
    </delete>
    <insert id="save" parameterType="ml.idream.manage.sys.department.SysDepartment" useGeneratedKeys="true" keyProperty="id">
        insert into sys_department (name,del_flag) values (#{name},#{delFlag})
    </insert>
    <select id="findDepartmentByUserId" parameterType="Long" resultType="ml.idream.manage.sys.department.SysDepartment">
      SELECT d.* FROM
        sys_department d
        LEFT JOIN sys_user_department m on m.department_id = d.id
      WHERE m.user_id = #{userId}
    </select>
</mapper>