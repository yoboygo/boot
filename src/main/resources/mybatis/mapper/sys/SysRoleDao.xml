<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ml.idream.manage.sys.role.SysRoleDao">
    
    <resultMap id="SysRole" type="ml.idream.manage.sys.role.SysRole">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <association property="permissions" column="id" select="ml.idream.manage.sys.permission.SysPermissionDao.findPermissionByRoleId" />
    </resultMap>
    
    <delete id="deleteAll">
        delete from sys_role
    </delete>
    <delete id="deleteAllRolePermission">
        delete from sys_role_permission
    </delete>
    <insert id="save" parameterType="ml.idream.manage.sys.role.SysRole" useGeneratedKeys="true" keyProperty="id">
        insert into sys_role (name) values (#{name})
    </insert>
    <select id="findAll" resultMap="SysRole" >
        select * from sys_role
    </select>
    
    <insert id="saveRolePermission" parameterType="List">
        insert into sys_role_permission (role_id,permission_id)
        values
         <foreach collection="list" item="item" separator=",">
             (#{item.roleId},#{item.permissionId})
         </foreach>

    </insert>
    <select id="findRoleByUserId" parameterType="Long" resultMap="SysRole">
      SELECT
            R.*
        FROM
            sys_role R
            LEFT JOIN sys_user_role M ON M.role_id = R.id
      WHERE M.USER_ID = #{userId}
    </select>
</mapper>