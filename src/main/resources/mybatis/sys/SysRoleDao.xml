<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ml.idream.sys.role.SysRoleDao">
    
    <resultMap id="SysRole" type="ml.idream.sys.role.SysRole">
        <association property="permissions" column="id" select="ml.idream.sys.permission.SysPermissionDao.findPermissionByRoleId" />
    </resultMap>
    
    <delete id="deleteAll">
        delete from sys_role
    </delete>
    <insert id="save" parameterType="ml.idream.sys.role.SysRole" useGeneratedKeys="true" keyProperty="id">
        insert into sys_role (name) values (#{name})
    </insert>
    <select id="findAll" resultType="SysRole" >
        select * from sys_role
    </select>
</mapper>